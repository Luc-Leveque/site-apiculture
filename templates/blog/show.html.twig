{% extends 'base.html.twig' %}

{% block body %}

<div class="col">
    <div class="row space-around">
        <div class="col">
            <artcicle>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le
                    {{ article.createAt | date('d/m/Y') }}
                    à
                    {{ article.createAt | date('H:i') }}
                    dans la catégorie
                    {{ article.category.title}}
                </div>
                <div class="content">
                    <img src="{{ article.image }}" alt=""><br />
                    {{ article.content | raw }}
                </div>
                <a class="btn btn-info" href="{{ path('blog_edit', {'id': article.id}) }}">Modifier</a>

            </artcicle>
        </div>
    </div>
    <div class="row justify-content-between align-items-center">
        <section id="commentaires">
        <p>{{ article.commentArticles| length }}
            commentaires :</p>
        {% for commentArticle in article.commentArticles %}

            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ commentArticle.author.username}}
                        (<small>{{ commentArticle.createdAt | date('d/m/Y à H:i')}}</small>)
                    </div>
                    <div class="col">
                        {{ commentArticle.content | raw}}
                    </div>
                </div>
            </div>

        {% endfor %}

        {% if app.user %}

            {{ form_start(commentArticleForm) }}
            {{ form_row(commentArticleForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}

            <button type="submit" class="btn btn-success">Commenter !</button>

            {{ form_end(commentArticleForm) }}

        {% else %}
            <p>Vous ne pouvez pas commenter si vous n'êtes pas connecté</p>
            <a href="{{ path('security_login')}}" class="btn btn-primary">Connexion</a>
        {% endif %}
        </section>
    </div>
    <div class="row space-around">
        <a class="btn btn-info" href="{{ path('documentation_apiculture')}}">Retour</a>
    </div>
</div>

{% endblock %}