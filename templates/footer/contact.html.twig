{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/pagesfooter.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}
<h1 class="d-flex flex-row">Nous Contacter</h1>
 <div class="d-flex flex-row justify-content-around">
    <form action="{{ path('send-mail')}}" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" id="email" required>
        </div>
        <div class="form-group">
            
            <label for="object">Objet</label>
            <input type="text" class="form-control" name="object" id="object" rows="3" required>
            <label for="message">Message</label>
            <textarea class="form-control" name="message" id="message" rows="3" required></textarea>
        </div>
        <button class="btn bg-warning text-dark" type="submit">Valider</button>
    </form>
</div> 


{% endblock %}
