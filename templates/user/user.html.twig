{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/user.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="d-flex flex-row justify-content-md-center">
	    <div>
	    	<h1>Mes informations personnelles</h1>
		    <ul class="list-group my-3">
			    <li class="list-group-item">Mon pseudo : {{app.user.username}}</li>
			    <li class="list-group-item">Mon adresse mail : {{app.user.email}}</li>
		    </ul>
			<div class="d-flex justify-content-around">
			    <a href="{{ path('user_edit')}}" class="btn bg-warning text-dark">Modifier ses informations</a>
			    <a href="{{ path('user_change_password')}}" class="btn bg-warning text-dark">Modifier mon mot de passe</a>    
	    	</div>
	    </div>
	</div>
{% endblock %}