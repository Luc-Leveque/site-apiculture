{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/security.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

<div class="container">
<div class="row justify-content-md-center">
    <h1>Inscription</h1>
</div>
<div class="row justify-content-md-center">
    {{ form_start(form, {'attr':{'class': 'w-50'}})}}
        {{ form_row(form.username, {'label': 'Pseudo','attr':{'placeholder': 'Pseudo'}})}}
        {{ form_row(form.email, {'label': 'Adresse email','attr':{'placeholder': 'Adresse email'}})}}
        {{ form_row(form.password, {'label': 'Mot de passe','attr':{'placeholder': 'Mot de passe'}})}}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe','attr':{'placeholder': 'Retaper votre mot de passe'}})}}

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success, bg-warning">Inscription</button>
        </div>

    {{ form_end(form)}}
</div>
</div>

{% endblock %}
