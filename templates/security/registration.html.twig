{% extends 'base.html.twig' %}

{% block body %}

<div class="container justify-content-center">
    <div class="col-sm justify-content-md-center">
        <h1>Inscription</h1>
    </div>
    <div class="col-sm justify-content-md-center">
    {{ form_start(form)}}
        {{ form_row(form.username, {'label': 'Pseudo','attr':{'placeholder': 'Pseudo'}})}}
        {{ form_row(form.email, {'label': 'Adresse email','attr':{'placeholder': 'Adresse email'}})}}
        {{ form_row(form.password, {'label': 'Mot de passe','attr':{'placeholder': 'Mot de passe'}})}}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe','attr':{'placeholder': 'Retaper votre mot de passe'}})}}
        <button type="submit" class="btn btn-success, bg-warning">Inscription</button>
    {{ form_end(form)}}
    </div>
</div>

{% endblock %}
