{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/documentation.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="col-sm">
    <div class="row justify-content-center">
        <h2>{{ article.title }}</h2>
    </div>
    <div class="row justify-content-center">
    <p></p>
    </div>
    <div class="row justify-content-between">
        <div class="col text-justify">
           <span> {{ article.content }}</span>
        </div>
        <div class="col justify-content-end">
            <img id="articleImage"class="img-responsive rounded" src="{{ article.image }}" alt="bee colony" >
        </div>
    </div>
    <div class="row justify-content-center">
    <p></p>
    </div>
    {% block return_button %}
    <div class="row justify-content-center">
        <a class="btn btn-warning" href="{{ path('documentation_apiculture')}}">Retour</a>
        <a class="btn btn-warning" href="{{ path('blog_edit', {'id': article.id} )}}">Modifier</a>

    </div>
    {% endblock %}
</div>
{% endblock %}