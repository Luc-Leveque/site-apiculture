{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

{% if  app.user.level == 1 %}

    <h1>ERROR: Partie reserver à l'admnistration</h1>

{% elseif  app.user.level == 2 %}



    <h1>Gestion des articles</h1>
    <section class="articles">
    <a class="nav-link" href="{{ path('blog_create') }} ">Créer un article</a>

        {% for article in articles %}
            <artcicles>
                <ul>
                    <li>Identifiant : {{article.id}}</li>
                    <li>Appartient à la catégorie : {{article.category.title}}</li>
                    <li>Publié le: {{ article.createAt | date('d/m/Y à H:i')}}</li>
                    <a href="{{ path('blog_edit', {'id': article.id}) }}" >Modifier l'article n° {{article.id}}</a><br />
                    <a href="{{ path('delete_article', {'id': article.id}) }}" >Supprimer l'article n° {{article.id}}</a>
                </ul><br />
            </artcicles>
        {% endfor %}
{% endif %}

    <a class="btn btn-warning" href="{{ path('admin')}}">Retour</a>


{% endblock %}
