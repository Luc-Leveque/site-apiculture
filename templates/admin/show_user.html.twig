{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

{% if  app.user.level == 1 %}

    <h1>ERROR: Partie reserver à l'admnistration</h1>

{% elseif  app.user.level == 2 %}



    <h1>Gestion des utilisateurs</h1>
    <section class="articles">

        {% for user in users %}
            <artcicles>
                <ul>
                    <li>Identifiant : {{user.id}}</li>
                    <li>Pseudo: {{user.username}}</li>
                    <li>Adresse mail: {{user.email}}</li>
                    <a href="{{ path('delete_user', {'id': user.id}) }}" >Supprimer l'utilisateur n° {{user.id}}</a>
                </ul><br />
            </artcicles>
        {% endfor %}
{% endif %}

        <a class="btn btn-warning" href="{{ path('admin')}}">Retour</a>


{% endblock %}
