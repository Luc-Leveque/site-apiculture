{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
{% if  app.user.level == 1 %}
    <div>
        <h1>ERROR</h1>
        <p>Partie réservée à l'admnistration</p>
    </div>
    {% elseif  app.user.level == 2 %}
    <div class="col">
        <div class="row justify-content-center">
            <h1>Admnistration</h1>
        </div>
        <div class="row justify-content-around">
            <a href="{{ path('show_user')}}" class="btn btn-warning">Gérer les utilisateurs</a>
            <a href="{{ path('show_comment')}}" class="btn btn-warning">Gérer les commentaires</a>
            <a href="{{ path('show_article')}}" class="btn btn-warning">Gérer les articles</a>
            <a href="{{ path('admin_show_topic')}}" class="btn btn-warning">Gérer les topics</a>
        </div>
        {% endif %}
    </div>

{% endblock %}



