{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/forum.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

{% if app.user %}

<h1>Création de topic</h1>

<div class="create-topic">
    {{ form_start(formTopic)}}

    {{ form_row(formTopic.title, 
    {'label': 'Titre','attr':{'placeholder': 'Titre du topic..'}})}}
    <button type="submit" class="btn btn-warning">Créer topic</button>
    {{ form_end(formTopic)}}
</div>

{% else %}
<p>Vous ne pouvez pas créer de topic si vous n'êtes pas connecté !</p>

{% endif %}

<a class="back btn btn-warning" href="{{ path('forum')}}">Retour</a>


{% endblock %}

