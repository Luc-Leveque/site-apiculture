{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bienvenue sur le forum d'apiculture</h1>
    
    {% if app.user %}

            <a href="{{ path('create_topic') }}" >Créer un topic</a>
    {% else %}

        <p>Vous ne pouvez pas créer de topic si vous n'êtes pas connecté !</p>

    {% endif %}
    
    {% for topic in topics %}
            <artcicles>
                <ul>
                    <a href="{{ path('show_topic', {'id': topic.id}) }}" >{{topic.title}}</a><br />
                    {% if app.user %}
                        {% if app.user.level == 2  %}
                        <a href="{{ path('delete_topic', {'id': topic.id}) }}" >Supprimer ce topic</a>
                        {% elseif app.user.id == topic.author.id %}
                        <a href="{{ path('delete_topic', {'id': topic.id}) }}" >Supprimer mon topic</a>
                        {% endif %}
                    {% endif %}
                </ul>
            </artcicles>
        {% endfor %}

    

    
{% endblock %}
