<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Apiculture{% endblock %}
        </title>
        <link rel="icon" href="{{ asset('images/bee_logo.png') }}" />
        {% block stylesheets %}
        <link href="{{ asset('css/app.css') }}" rel="stylesheet" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <nav class="navbarTop navbar fixed-top navbar-expand-xl navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }} "><img src="{{ asset('images/bee_logo.png') }}" width="30" height="30" alt="bee"> Apiculture</a>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#beesNavbar" aria-controls="beesNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="beesNavbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('actualite') }}">Actualités</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('documentation_history') }} ">Historique</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('documentation_bees') }} ">Vie de la colonie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('documentation_hive') }} ">Exploitation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('documentation_products') }} ">Produits de la ruche</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('forum') }}">Forum</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    {% if not app.user %}
                        <li class="nav-item ">
                            <a href="{{ path('security_login') }}" class="nav-link">
                                Connexion
                            </a>
                        </li>
                    {% else %}
                    <li class="nav-item">
                            <a href="{{ path('user_info') }}" class="nav-link">
                                Mes informations
                            </a>
                        </li>
                        {% if  app.user.level == 2 %}
                        <li class="nav-item">
                            <a href="{{ path('admin') }}" class="nav-link">
                                Administration
                            </a>
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            <a href="{{ path('security_logout') }}" class="nav-link">
                                Déconnexion
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>

        <div>
        <nav class="navbarBottom navbar fixed-bottom navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('terms') }}">Conditions d'utilisation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('legals') }}">Mentions légales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Nous contacter</a>
                </li>
            </ul>
            <ul class="navbar-nav,  flex-column m-0">
                <p class="text-black-50 m-0">Nous rejoindre :</p>
                <a class="navbar-brand, m-0" href="https://fr-fr.facebook.com/apiculture.net/" target="_blank"><img src="{{ asset('images/logo-fb.png') }}" width="30" height="30" alt="page facebook"></a>
                <a class="navbar-brand, m-0" href="https://www.instagram.com/secretsdemiel/" target="_blank"><img src="{{ asset('images/logo-insta.png') }}" width="30" height="30" alt="page instagram"></a>
                <a class="navbar-brand, m-0" href="https://twitter.com/unafapiculture?lang=fr " target="_blank"><img src="{{ asset('images/logo-twitter.jpg') }}" width="30" height="30" alt="page twitter"></a>
            </ul>
        </nav>
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>